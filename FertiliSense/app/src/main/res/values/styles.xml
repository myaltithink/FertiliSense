<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryDark">@color/violet</item>
        <item name="colorAccent">@color/violet</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="BottomNavigationTextAppearanceInactive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/violet</item>
    </style>

    <style name="CircleImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Corner.Full</item>
    </style>

   <style name="ShapeAppearanceOverlay.App.Corner.Full" parent="">
       <item name="cornerFamily">rounded</item>
       <item name="cornerSize">50%</item>
   </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CalendarDayTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>